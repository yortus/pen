{
    "compilerOptions": {

        "target": "es2017",
        "module": "amd",
        "lib": ["es2017"],
        "types": [],

        "rootDir": ".",
        //"outDir": "../dist/extras",
        "sourceMap": true,
        "declaration": true,
        //"declarationMap": true,

        "outFile": "../dist/extras/all.js",

        "pretty": true,

        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
