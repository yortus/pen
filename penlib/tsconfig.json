{
    "compilerOptions": {
        "target": "es2017",
        "module": "none",
        "lib": ["es2017"],
        "types": [],

        "rootDir": ".",
        "outFile": "../dist/penlib.js",
        "removeComments": false,
        "sourceMap": false,
        "declaration": false,

        "pretty": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": false,
    }
}
