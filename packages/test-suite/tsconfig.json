{
    "compilerOptions": {
        "composite": false,
        "target": "es2019",
        "module": "commonjs",
        "lib": ["es2019"],
        "types": ["mocha", "node"],

        "noEmit": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
    },
    "include": ["bench/", "tests/"],
    "references": [
        {"path": "../core/penc"},
        {"path": "../core/penrt"},
    ]
}
