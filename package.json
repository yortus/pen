{
    "private": true,
    "name": "pen-monorepo",
    "main": "packages/???",
    "engines": {
        "node": ">=8.2.1"
    },
    "scripts": {
        "bootstrap": "yarn install && lerna bootstrap",
        "prebuild": "lerna run prebuild",
        "build": "tsc --build packages --verbose",
        "postbuild": "lerna run postbuild",
        "clean": "lerna run clean && lerna clean --yes && rimraf node_modules",
        "rebuild": "yarn clean && yarn bootstrap && yarn build",
        "lint": "tslint packages/*/*/src/**/*.ts",
        "test": "node packages/usage-tests/math/dist/index.js",
        "test:bc": "node --print-bytecode >bytecode.txt packages/usage-tests/math/dist/index.js"
    },
    "devDependencies": {
        "@types/node": "^8.0.0",
        "concurrently": "^3.5.1",
        "cpx": "^1.5.0",
        "lerna": "^2.8.0",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "typescript": "next"
    }
}
