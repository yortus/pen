{
    "name": "penc",
    "version": "0.3.0",
    "description": "PEN Compiler",
    "engines": {
        "node": ">=8.2.1"
    },
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts": {
        "clean": "rimraf dist/",
        "build": "npm run build:penlib && npm run build:src",
        "build:penlib": "tsc -p penlib",
        "build:src": "tsc && cpy **/*.pegjs ../dist --cwd=src --parents",
        "lint": "tslint src/**/*.ts",
        "test": "mocha --require ts-node/register src/**/*.test.ts"
    },
    "contributors": [
        {
            "name": "Troy Gerwien",
            "email": "yortus@gmail.com",
            "url": "http://github.com/yortus/"
        }
    ],
    "license": "MIT",
    "dependencies": {
        "mkdirp": "^0.5.1",
        "pegjs": "^0.10.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.0",
        "@types/mkdirp": "^0.5.2",
        "@types/mocha": "^5.2.7",
        "@types/node": "^10.14.16",
        "@types/pegjs": "^0.10.1",
        "@types/rimraf": "^2.0.3",
        "chai": "^4.2.0",
        "concurrently": "^3.5.1",
        "cpy": "^8.0.1",
        "cpy-cli": "^2.0.0",
        "mocha": "^5.2.0",
        "rimraf": "^2.7.1",
        "ts-node": "^8.4.1",
        "tslint": "^5.19.0",
        "typescript": "^3.8.2"
    }
}
