{
    "name": "penc",
    "version": "0.3.0",
    "description": "PEN Compiler",
    "engines": {
        "node": ">=8.2.1"
    },
    "main": "dist/commonjs/index.js",
    "typings": "dist/commonjs/index.d.ts",
    "scripts": {
        "clean": "rimraf dist/",
        "build": "yarn build:src && yarn build:tests",
        "build:src": "tsc -p src && pegjs -o dist/commonjs/parse.js src/parse.pegjs",
        "build:tests": "tsc -p test && cpx test/fixtures/*.* dist/test/fixtures",
        "lint": "tslint src/**/*.ts test/**/*.ts",
        "test": "node ./scripts/run-unit-tests",
        "test:debug": "cross-env DEBUG=penc node ./scripts/run-unit-tests",
        "prepare": "npm run self-ref && npm run build",
        "self-ref": "node ./scripts/enable-self-reference"
    },
    "contributors": [
        {
            "name": "Troy Gerwien",
            "email": "yortus@gmail.com",
            "url": "http://github.com/yortus/"
        }
    ],
    "license": "MIT",
    "dependencies": {
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.0.0",
        "chai": "^4.2.0",
        "concurrently": "^3.5.1",
        "cpx": "^1.5.0",
        "mocha": "^5.2.0",
        "pegjs": "^0.10.0",
        "rimraf": "^2.6.2",
        "tslint": "^5.11.0",
        "typescript": "next"
    }
}
