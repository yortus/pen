{
	// Columns at which to show vertical rulers.
	"editor.rulers": [120],

    // Specifies the folder path containing the tsserver and lib*.d.ts files to use.
	"typescript.tsdk": "node_modules/typescript/lib",

	// Hide files/folders in Explorer if they match any of the following patterns.
	"files.exclude": {
		"node_modules": false,
		"dist": false,
		"**/.git": false,
		"**/.DS_Store": false
	},

	// Settings for "Mocha Test Explorer" extension.
	"mochaExplorer.files": ["src/**/*.test.ts", "test/**/*.test.ts"],
	"mochaExplorer.require": "ts-node/register",
	"mochaExplorer.debuggerConfig": "Mocha Tests",
}
